reg [1:0] dif;
reg rst;
reg [6:0] seed;
// wires                                               
wire [1:0] out;

wire sampler;                             

// assign statements (if any)                          
genius i1 (
// port map - connection between master ports and signals/registers   
	.clk(clk),
	.dif(dif),
	.out(out),
	.rst(rst),
	.seed(seed)
);

// clk
always
begin
	clk = 1'b0;
	clk = #5000 1'b1;
	#5000;
end 

// rst
initial
begin
	rst = 1'b1;
	rst = #20000 1'b0;
end 
// seed[ 6 ]
initial
begin
	seed[6] = 1'b0;
end 
// seed[ 5 ]
initial
begin
	seed[5] = 1'b1;
end 
// seed[ 4 ]
initial
begin
	seed[4] = 1'b0;
end 
// seed[ 3 ]
initial
begin
	seed[3] = 1'b1;
end 
// seed[ 2 ]
initial
begin
	seed[2] = 1'b1;
end 
// seed[ 1 ]
initial
begin
	seed[1] = 1'b1;
end 
// seed[ 0 ]
initial
begin
