end 
// dif[ 1 ]
initial
begin
	dif[1] = 1'b0;
end 
// dif[ 0 ]
initial
begin
	dif[0] = 1'b1;
end 

genius_vlg_sample_tst tb_sample (
	.clk(clk),
	.dif(dif),
	.rst(rst),
	.seed(seed),
	.sampler_tx(sampler)
);

genius_vlg_check_tst tb_out(
	.out(out),
	.sampler_rx(sampler)
);
endmodule

